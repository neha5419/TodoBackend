generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Users{
  u_id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  todo Todo[]
}

model Todo{
  t_id Int @id @default(autoincrement())
  content String
  author Users @relation(fields: [u_id],references: [u_id])
  u_id Int
}